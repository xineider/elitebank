	<section class="no-padding-bottom" id="accordion-usuarios">
		<div class="container-fluid">
			<div class="row d-flex align-items-stretch">
				<div class="col-lg-12">
					<div class="block">
						<div class="title">
							<div class="title pointer" data-toggle="collapse" data-toggle="collapse" data-target="#collapse-usuarios" aria-expanded="true" aria-controls="collapse-usuarios">
								<strong>Usuários</strong>
							</div>
						</div>
						<div class="block-body collapse show" id="collapse-usuarios" class="" aria-labelledby="Usuários" data-parent="#accordion-usuarios">



							<div class="w100 inline overflow-auto">
								<table class="table centered highlight responsive-table cell-border tabela_filtrada" id="tabela_administracao">
									<thead>
										<tr>
											<th>Nome</th>
											<th>E-mail</th>
											<th>Status</th>
											<th>Erro</th>
											<th>Conectou Hoje</th>
											<th>Ações</th>
										</tr>
									</thead>
									<tbody>
										<% if (typeof data[usuario.id +'_usuarios_suporte'] != 'undefined' && data[usuario.id +'_usuarios_suporte'].length > 0) {
											for (var i = 0; i < data[usuario.id +'_usuarios_suporte'].length; i++) {%>
											<tr>
												<td>
													<%= data[usuario.id +'_usuarios_suporte'][i].nome %>
												</td>

												<td>
													<%= data[usuario.id +'_usuarios_suporte'][i].email %>
												</td>


												<%if (data[usuario.id +'_usuarios_suporte'][i].conta.length > 0 ){%>



												<td class="capitalize">

													<%if(data[usuario.id +'_usuarios_suporte'][i].conta[data[usuario.id +'_usuarios_suporte'][i].conta.length - 1].acao == 'iniciar'){%>
													<%= data[usuario.id +'_usuarios_suporte'][i].conta[data[usuario.id +'_usuarios_suporte'][i].conta.length - 1].status == 'standby' ? 'aguardando' : data[usuario.id +'_usuarios_suporte'][i].conta[data[usuario.id +'_usuarios_suporte'][i].conta.length - 1].status %>

													<%}else{%>
													<span class="red-text">Desconectado</span>
													<%} %>
												</td>

												<%}else{%>
												<td>
													<span class="red-text">Nunca Conectou</span>
												</td>
												<% } %>


												<td>


													<%if (data[usuario.id +'_usuarios_suporte'][i].conexao.length > 0 ){%>
													<%if(data[usuario.id +'_usuarios_suporte'][i].conexao[data[usuario.id +'_usuarios_suporte'][i].conexao.length - 1].status == ''){%>
													Aguardando Conexão

													<%}else if(data[usuario.id +'_usuarios_suporte'][i].conexao[data[usuario.id +'_usuarios_suporte'][i].conexao.length - 1].status == 'erro de conexao'){%>

													<button class="btn red modal-mount margin-t-10 margin-r-10" data-modal='#modalinfo' data-link="/sistema/get-conexao-usuario/<%= data[usuario.id +'_usuarios_suporte'][i]._id%>" >
														Erro de Conexão
													</button>
													<%}%>
													<%}%> 

												</td>


												<td></td>


												<td>

													<button class="btn btn-primary modal-mount margin-t-10 margin-r-10" data-modal='#modalinfo' data-link="/sistema/get-mensagens-usuario/<%= data[usuario.id +'_usuarios_suporte'][i]._id%>" >
														Mensagens Usuário
													</button>

												</td>

											</tr>
											<%
										}
									}
									%>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>



